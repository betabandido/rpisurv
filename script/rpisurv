server {
  listen 80;
  server_name <your_IP>;
  return 301 https://$server_name$request_uri;
}

server {
  listen 443 ssl;
  server_name <your_IP>;
  include snippets/self-signed.conf;
  include snippets/ssl-params.conf;

  location / {
    include uwsgi_params;
    uwsgi_pass unix:<path_to_rpisurv>/web/rpisurv.sock;
  }
}

